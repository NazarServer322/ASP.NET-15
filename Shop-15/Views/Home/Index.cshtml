@model Shop_15.Models.ViewModels.HomeVM

<div class="container">
    <div class="text-center">
        <button class="btn btn-dark">All</button>
        @foreach (var item in Model.Categories)
        {
            <button class="btn btn-dark">@item.Name</button>
        }
    </div>
    <br />
    <div class="row">
        @foreach (var item in Model.Products) 
        { 
            <partial model="item" name="_productCard" />
        }
    </div>
</div>